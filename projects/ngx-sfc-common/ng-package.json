{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/ngx-sfc-common",
  "lib": {
    "entryFile": "src/public-api.ts",
    "styleIncludePaths": [
      "src/lib/styles"
    ]
  },
  "assets": [
    {
      "input": "src/lib/styles",
      "glob": "**/*.scss",
      "output": "styles"
    },
    {
      "input": "src/lib/components",
      "glob": "**/*.mixins.scss",
      "output": "components"
    }
  ]
}